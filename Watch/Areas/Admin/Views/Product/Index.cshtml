
<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col-6 text-end">

            <a class=" btn btn-primary" asp-Controller="Product" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i> Create new Product
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped text-primary" id="tblData" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Brand</th>
                <th>Category</th>
               <th></th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
