@model CoverType

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-5" >
        <div class="row pb-3">
            <h3 class="text-primary p-2">Edit CoverType</h3>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <br/>
            
        </div>
        <div>
            <button type="submit" class="btn btn-warning" style="width:150px" >Update </button>
            <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
