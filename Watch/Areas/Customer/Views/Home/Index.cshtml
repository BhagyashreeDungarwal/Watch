@model IEnumerable<Watch.Models.Product>

<div class="row pb-3">
    @foreach(var Product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" border:1px solid #008cba; border-radius: 5px">
                    <div class="card">
                        <img src="@Product.ImageURL" class="card-img-top rounded" />
                        <div class="card-body">
                            <p class="card-title text-dark">@Product.Title</p>
                            <p class="card-title text-primary">@Product.Brand</p>
                            <p>ListPrice: <strike><b>$ @Product.ListPrice.ToString("0.00")</b></strike></p>
                            <p>As low as:<b>$ @Product.Price100.ToString("0.00")</b></p>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@Product.Id">
                                Details
                            </a>
                        </div>

                    </div>

                </div>

            </div>
        </div>

    }
</div>
